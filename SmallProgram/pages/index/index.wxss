/* pages/index/index.wxss */
page{
  background-color: rgb(252, 245, 250)
}
.list-items{
  border-bottom: 1px dashed #888;
  padding:20rpx 0 20rpx 30rpx;
  transition: 300ms;
  opacity: 1
}
.selected{
  opacity: 0.4
}

.list-items-item{
  transition: 500ms;
  height: 0rpx;
  transform: translateY(-50%);
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
}
.list-items-item.isShow{
  height: auto;
  transform: translateY(0)
}

.card-item{
  background: rgba(124, 180, 202,0.7);
  border-radius: 20%;
  width: 33.33%;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 10px;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid #fff;
}

.icon-text{
  font-size: 120rpx;
  color: #606060
}